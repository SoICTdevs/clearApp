<!DOCTYPE html>
<html>
  <head>
    <title>ClearApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to  root_path do %>
            <div class="urlogo">
                <%= image_tag  "urlogo.png", width:'40%' %>
              </div>
          <% end %>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="moto">Online Clearance Management Information System</li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <div class="adminlogin">
                <%= link_to "Welcome #{current_student.reg_number} Logout", logout_path, class:'staff-login pull-right' %> &nbsp;              
            </div>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>
    <div class="container">
         <div class="row">
            <div class="col-md-3">
            </div>
            <div class="col-md-6">
            <div class="content">
              <% if flash[:notice]%>
                  <div class="alert alert-success"><%= flash[:notice]%></div>
                <% end %>
                <% if flash[:alert]%>
                  <div class="alert alert-danger"><%= flash[:alert] %></div>
                <% end %>
                
                <%= yield %>
              </div>
            </div>
            <div class ="col-md-3">
            
            </div>
        </div>
    </div>
    
  </body>
</html>