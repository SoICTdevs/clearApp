<!DOCTYPE html>
<html>
  <head>
    <title>ClearApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'admin/application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
    <div class="row">
      <div class="col-md-4">
        <div class="urlogo">
            <%= image_tag  "urlogo.JPG" %>
          </div>
      </div>
      <div class="col-md-8">
        <div class="content">
          <ul class="nav navbar-nav navbar-right">
            <li class="logout">
              <%= link_to  "Logout", admin_logout_path %>
            </li>
          </ul>
          <h3>Welcome to SoICT clearance application</h3>
        </div>
        <%if current_user %>
        <div class="email"><strong>Logged in as:</strong> <%= current_user.role%></div>
        <% end %>
      </div>
    </div>
  <body>
      <div class="container">
        <div class="row">
          <div class="col-sm-3">
            <%= render  "partials/dashboard" %>
              <!--<ul class="nav nav-sidebar">
                <br>
                <br>
                <li class="<%= params[:controller] == 'admin/applications' ? 'active' : '' %>">
                <%= link_to  "New application (3)", admin_applications_path %>
                </li>
                <br>
                <li>
                <%= link_to  "Approved application (1)", admin_applications_path %>
                </li>
                <br>
                <li>
                <%= link_to  "Rejected application (13)", admin_applications_path %>
                </li>
                <br>              
              </ul>-->
          </div>
          <div class="col-sm-9">
             <% if flash[:notice]%>
                <div class="alert alert-success"><%= flash[:notice]%></div>
              <% end %>
              <% if flash[:alert]%>
                <div class="alert alert-danger"><%= flash[:alert] %></div>
              <% end %>
            <%= yield %>
            
          </div>
        </div>
    </div>
    
  </body>
</html>
