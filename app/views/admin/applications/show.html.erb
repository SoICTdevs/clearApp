<div class="panel panel-default">
    <% if @new %>
    <div class="panel panel-heading">
      <h3><%= @page_title %></h3>
    </div>
    <div class="panel panel-body">
       <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Registration Number</th>
            <th>School</th>
            <th>Departmentr</th>
            <th>Level</th>
            <th>Applied At</th>
            <th>Action</th>
          </tr>
        </thead>
        <% @new.each do |application|%>
          <tbody>
            <tr>
              <td><%= application.reg_number%></td>
              <td><%= application.school.name%></td>
              <td><%= application.department.name%></td>
              <td><%= application.level%></td>
              <td><%= application.created_at.to_time.strftime('%B %e, %Y')%></td>
              <td><%= link_to  "View details", edit_admin_application_path(application) %></td>
            </tr>     
          </tbody>
        <% end%>
      </table>
      <%= paginate @approve%>
    </div>
    </div>
    <% elsif @approve %>
    <div class="panel panel-heading">
       <h3><%= @page_title %></h3>
    </div>
    <div class="panel panel-body">
       <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Registration Number</th>
            <th>School</th>
            <th>Departmentr</th>
            <th>Level</th>
            <th>Applied At</th>
            <th>Action</th>
          </tr>
        </thead>
        <% @approve.each do |application|%>
          <tbody>
            <tr>
              <td><%= application.reg_number%></td>
              <td><%= application.school.name%></td>
              <td><%= application.department.name%></td>
              <td><%= application.level%></td>
              <td><%= application.created_at.to_time.strftime('%B %e, %Y')%></td>
              <td><%= link_to  "View details", edit_admin_application_path(application) %></td>
            </tr>     
          </tbody>
        <% end%>
      </table>
      <%= paginate @new%>
    </div>
    </div>
    <% elsif @reject %>
    <div class="panel panel-heading">
      <h3><%= @page_title %></h3>
    </div>
    <div class="panel panel-body">
      <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>Registration Number</th>
            <th>School</th>
            <th>Departmentr</th>
            <th>Level</th>
            <th>Applied At</th>
            <th>Action</th>
          </tr>
        </thead>
        <% @reject.each do |application|%>
          <tbody>
            <tr>
              <td><%= application.reg_number%></td>
              <td><%= application.school.name%></td>
              <td><%= application.department.name%></td>
              <td><%= application.level%></td>
              <td><%= application.created_at.to_time.strftime('%B %e, %Y')%></td>
              <td><%= link_to  "View details", edit_admin_application_path(application) %></td>
            </tr>     
          </tbody>
        <% end%>
      </table>
      <%= paginate @reject%>
    </div>
    </div>
    
</div>

<% elsif current_user.role == 'Registrar'%>
        <h3 class="page-header"><%= @application.reg_number %> | <%= @application.department.name %> | Level: <%= @application.level %> | <%= @application.academic_year %></h3>

        <table class="table table-striped">
        <tr>
        <th>School Administrator</th>
        <th>Feedback</th>
        <th>Comments</th>
        </tr>
        <tr>
        <td>Dean of School</td>
        <td><%= if @application.is_dean_approve == 1 then 'approved' elsif @application.is_dean_approve == 0 then 'Rejected' else 'Pending...' end %></td>
        <td><%= if @application.is_dean_approve == 0 then data.dean_comment elsif @application.is_dean_approve == 2 then 'Pending...' else 'No comment' end %></td>
        </tr>
        <tr>
        <td>Head of Department</td>
        <td><%= if @application.is_hod_approve == 1 then 'approved' elsif @application.is_hod_approve == 0 then 'Rejected' else 'Pending...' end %></td>
        <td><%= if @application.is_hod_approve == 0 then data.hod_comment elsif @application.is_hod_approve == 2 then 'pending...'  else 'No comment' end %></td>
        </tr>
        <tr>
        <td>Finance</td>
        <td><%= if @application.is_finance_approve == 1 then 'approved' elsif @application.is_finance_approve == 0 then 'Rejected' else 'Pending...' end %></td>
        <td><%= if @application.is_finance_approve == 0 then @application.finance_comment elsif @application.is_finance_approve == 2 then 'Pending...' else 'No comment' end %></td>
        </tr>
        <tr>
        <td>Librarian</td>
        <td><%= if @application.is_librarian_approve == 1 then 'approved' elsif @application.is_dean_approve == 0 then 'Rejected' else 'Pending...' end %></td>
        <td><%= if @application.is_librarian_approve == 0 then @application.librarian_comment elsif @application.is_librarian_approve == 2 then 'pending...' else 'No comment' end %></td>
        </tr>
        <tr>
        <td>Student Welfare</td>
        <td><%= if @application.is_warden_approve == 1 then 'approved' elsif @application.is_warden_approve == 0 then 'Rejected' else 'Pending...' end %></td>
        <td><%= if @application.is_warden_approve == 0 then data.warden_comment elsif @application.is_warden_approve == 2 then 'Pending...' else 'No comment' end %></td>
        </tr>  
        </table>
<% else %>
<p>No applications currently avaible</p>
<% end %>


