<%= form_for( [:admin, @school] , remote: true) do |f| %>
<% if @school.errors.any?%>
  <% @school.errors.messages_full.each do |msg|%>
    <div class="alert alert-danger"><%= msg%></div>
  <% end %>
<%  end %>
<div class="form-group">
    <%= f.label :name, class:'sr-only'%>
    <%= f.text_field :name, class:'form-control', placeholder:'example: SoICT'%>
</div>
<div class="form-group">
    <%= f.label :full_name, class:'sr-only'%>
    <%= f.text_field :full_name, class:'form-control', placeholder:'example: School of ICT'%>
</div>
<%= f.submit "Submit", class:'btn btn-primary'%>
<% end %>
