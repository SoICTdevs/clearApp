<%= form_for( [:admin, @department] , remote: true) do |f| %>
<% if @department.errors.any?%>
  <% @department.errors.messages_full.each do |msg|%>
    <div class="alert alert-danger"><%= msg%></div>
  <% end %>
<%  end %>
<div class="form-group">
    <%= f.label :name, class:'sr-only'%>
    <%= f.text_field :name, class:'form-control', placeholder:'example: Information Technology'%>
</div>
<div class="form-group">
    <%= f.label :school_id, class:'sr-only'%>
    <%= f.collection_select :school_id, School.order(:name), :id, :name, {include_blank:'select school'}, class:'form-control'%>
</div>
<%= f.submit "Submit", class:'btn btn-primary'%>
<% end %>