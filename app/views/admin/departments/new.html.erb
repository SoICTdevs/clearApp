<%= form_for( [:admin, @department] , remote: true) do |f| %>
<% if @department.errors.any? %>
  <% @department.errors.messages_full.each do |msg|%>
    <div class="alert alert-danger"><%= msg%></div>
  <% end %>
<%  end %>
<div class="form-group">
    <%= f.label :name, class:'sr-only'%>
    <%= f.text_field :name, class:'form-control', placeholder:'example: IT'%>
</div>
<div class="form-group">
    <%= f.label :full_name, class:'sr-only'%>
    <%= f.text_field :full_name, class:'form-control', placeholder:'example: Information Technology'%>
</div>
<div class="form-group">
    <%= f.label :School, class:'sr-only'%>
    <%= f.select :school_id, School.all.collect {|x| [x.name, x.id]}, {:include_blank => '--select one--'}, class:'form-control'%>
</div>
<%= f.submit "Submit", class:'btn btn-primary'%>
<% end %>