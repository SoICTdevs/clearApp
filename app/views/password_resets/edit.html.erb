<%= form_for( @student, :url => password_reset_path(params[:id]) , remote: true) do |f| %>
    <% if @student.errors.any? %>
        <% @student.errors.full_messages.each do |msg| %>
           <div class="alert alert-danger"><%= msg %></div>
        <% end %>
    <% end %>
  <h2 class="form-signin-heading"><%= @page_title%></h2>
  <%= hidden_field_tag :email, @student.email %>
  <div class="form-group">
     <%= f.label :password, class:'sr-only'%>
     <%= f.password_field :password,  class:'form-control', placeholder:'New Password' %> 
  </div>
  <div class="form-group">
    <%= f.label :password, class:'sr-only'%>
  <%= f.password_field :password_confirmation,class:'form-control', placeholder:'Confirm Password' %>  
  </div>
  
  <%= submit_tag "Update Password", class:'btn-reset'%>
<% end %>
